<body id="body-bg">

    <div class="clock-card">
        <div id="greeting">Loading...</div>
        <h1 id="time">00:00:00</h1>
        <div id="date">Loading Date...</div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            const hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();

            // Time Format (Adding leading zero)
            const timeString = 
                `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
            
            document.getElementById('time').textContent = timeString;

            // Date Format
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('date').textContent = now.toLocaleDateString(undefined, options);

            // Logic for Greeting and Theme Change
            let greeting = "";
            let bgColor = "";

            if (hours < 12) {
                greeting = "Good Morning, Harun! â˜€ï¸";
                bgColor = "linear-gradient(135deg, #FF914D, #FF6E7F)"; // Morning Orange
            } else if (hours < 18) {
                greeting = "Good Afternoon, Harun! â˜•";
                bgColor = "linear-gradient(135deg, #2980B9, #6DD5FA)"; // Afternoon Blue
            } else {
                greeting = "Good Evening, Harun! ðŸŒ™";
                bgColor = "linear-gradient(135deg, #0F2027, #203A43, #2C5364)"; // Night Dark
            }

            document.getElementById('greeting').textContent = greeting;
            document.body.style.background = bgColor;
        }

        // Clock ko har second update karein
        setInterval(updateClock, 1000);

        // Page load hote hi clock start karein
        updateClock();
    </script>
</body>
